<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Profile - Bookshelves</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        header {
            background-color: #fff;
            border-bottom: 1px solid #e0e0e0;
            padding: 20px 0;
        }



        nav {
            display: flex;
            gap: 30px;
        }

        nav a {
            text-decoration: none;
            color: #000;
            font-size: 15px;
            transition: color 0.3s;
        }

        nav a:hover {
            color: #ff4757;
        }


        /* Main Content */
        .main-container {
            max-width: 1200px;
            margin: 25px auto;
            padding: 0 20px;
        }

        /* Breadcrumb */
        .breadcrumb {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            font-size: 14px;
            color: #666;
        }

        .breadcrumb a {
            color: #666;
            text-decoration: none;
        }

        .breadcrumb a:hover {
            color: #ff4757;
        }

        .breadcrumb-divider {
            margin: 0 8px;
        }

        .welcome-text {
            font-size: 16px;
            color: #333;
        }

        .welcome-text .customer-name {
            color: #ff4757;
            font-weight: 600;
        }

        /* Profile Layout */
        .profile-layout {
            display: grid;
            grid-template-columns: 280px 1fr;
            gap: 30px;
            align-items: start;
        }

        .sidebar-top{
            flex:1
        }

        .profile-content {
            background: #fff;
            border-radius: 8px;
            padding: 40px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        }

        .profile-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 30px;
            padding-bottom: 20px;
            border-bottom: 2px solid #f0f0f0;
        }

        .profile-title {
            font-size: 24px;
            font-weight: 600;
            color: #333;
        }

        .edit-profile-btn {
            padding: 10px 24px;
            background: #ff4757;
            color: #fff;
            border: none;
            border-radius: 25px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.3s;
        }

        .edit-profile-btn:hover {
            background: #ff3838;
        }


        .profile-info-section {
    background: #ffffff;
    padding: 28px;
    border-radius: 14px;
    box-shadow: 0 6px 20px rgba(0,0,0,0.08);
    margin-bottom: 30px;
}




.info-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 22px;
}

.info-item {
    background: #fafafa;
    padding: 16px 18px;
    border-radius: 10px;
    border: 1px solid #eee;
    display: flex;
    flex-direction: column;
    gap: 6px;
}

.info-label {
    font-size: 13px;
    font-weight: 600;
    color: #888;
    text-transform: uppercase;
    letter-spacing: 0.4px;
}
        .info-value {
            font-size: 16px;
            color: #333;
            font-weight: 500;
            padding: 12px 16px;
            background: #f8f9fa;
            border-radius: 6px;
            border: 1px solid #e9ecef;
        }

        .info-value.empty {
            color: #999;
            font-style: italic;
        }

        .info-text {
    font-size: 16px;
    font-weight: 600;
    color: #222;
}

        /* Security Section */
        .security-section {
            margin-top: 40px;
            padding-top: 30px;
            border-top: 2px solid #f0f0f0;
        }

        .security-title {
            font-size: 18px;
            font-weight: 600;
            color: #333;
            margin-bottom: 20px;
        }

        .security-actions {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

        .security-btn {
            padding: 12px 24px;
            background: #fff;
            color: #ff4757;
            border: 2px solid #ff4757;
            border-radius: 25px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .security-btn:hover {
            background: #ff4757;
            color: #fff;
        }

        .security-btn svg {
            width: 16px;
            height: 16px;
        }

        .address-content {
            flex: 1;
            background-color: #fff;
            padding: 40px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.1);
            padding-bottom: 70px;
        }

        .address-content h2 {
            font-size: 18px;
            margin-bottom: 30px;
            color: #333;
        }
        .address-list {
            display: flex;
            flex-direction: column;
            gap: 20px;
            margin-bottom: 30px;
        }

        .address-card {
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            padding: 20px;
            position: relative;
        }


        .address-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: -20px;
        }

        .primary-badge {
            background-color: #fff;
            color: #666;
            padding: 4px 12px;
            border-radius: 4px;
            font-size: 12px;
            border: 1px solid #e0e0e0;
        }

        .address-details {
            color: #333;
            font-size: 14px;
            line-height: 1.6;
            margin-bottom: 10px;
        }

        .address-actions {
            display: flex;
            gap: 10px;
        }


        .btn-delete {
            background-color: #ff4d4d;
            color: #fff;
        }

        .btn-delete:hover {
            background-color: #e64545;
        }

        .set-primary {
            color: #666;
            font-size: 12px;
            text-decoration: none;
        }

        .set-primary:hover {
            color: #ff4d4d;
            text-decoration: underline;
        }
        
        .edit-profile-btn {
            padding: 10px 24px;
            background: #ff4757;
            color: #fff;
            border: none;
            border-radius: 25px;
            font-size: 14px;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.3s;
            text-decoration: none;
        }

        .edit-profile-btn:hover {
            background: #ff3838;
        }


        .btn-add-address {
            background-color: #ff4d4d;
            color: #fff;
            padding: 12px 30px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            font-size: 15px;
            font-weight: 500;
            float: right;
        }

        .btn-add-address:hover {
            background-color: #e64545;
        }
        .btn-cancel {
    padding: 10px 22px;
    border-radius: 25px;
    text-decoration: none;
    font-weight: 600;
    background: #eee;
    color: #333;
}

.btn-cancel:hover {
    background: #ddd;
}
.info-input {
    width: 100%;
    font-size: 16px;
    padding: 12px 16px;
    border-radius: 6px;
    border: 1px solid #e9ecef;
    background: #ffffff;
    outline: none;
}

.info-input:focus {
    border-color: #ff4757;
    background: #fff;
}
.form-actions {
    display: flex;
    justify-content: flex-end;
    gap: 15px;
    margin-top: 25px;
}
/* Error text */
.error {
    color: #e63946;          /* soft red */
    font-size: 13px;
    display: block;
    font-weight: 500;
    margin-bottom: 20px;
}

/* Input error border */
.input-error {
    border: 1.5px solid #e63946 !important;
    background-color: #fff5f5;
}

/* Optional success border */
.input-success {
    border: 1.5px solid #2ecc71;
    background-color: #f6fffa;
}



        /* Responsive */
        @media (max-width: 968px) {
            .profile-layout {
                grid-template-columns: 1fr;
            }

            nav {
                order: 3;
                width: 100%;
                justify-content: center;
            }
        }

        @media (max-width: 640px) {
            .info-grid {
                grid-template-columns: 1fr;
            }

            .profile-content {
                padding: 25px 20px;
            }

            .security-actions {
                flex-direction: column;
            }

            .security-btn {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <%-include("../../views/partials/user/header")%>
    <!-- Main Content -->
    <div class="main-container">
        <!-- Breadcrumb -->
        <div class="breadcrumb">
            <div>
                <a href="/">Home</a>
                <span class="breadcrumb-divider">/</span>
                <span>My Account</span>
            </div>
            <div class="welcome-text">
                Welcome! <span class="customer-name"><%= user.fullname %></span>
            </div>
        </div>

        <!-- Profile Layout -->
        <div class="profile-layout">


            <%- include('../partials/user/profileSidebar',{
                user:user,
                activeMenu:'address'
            }) %>


            <main class="profile-content">
                <h2>Change Password</h2>
            
                <form id="changePasswordForm">
            
                    <div class="info-item">
            
                        <label class="info-label">Old Password</label>
                        <input type="password" name="oldPassword" class="info-input" placeholder="Enter old password">
                        <small class="error" id="oldPasswordError"></small>
            
                        <label class="info-label">New Password</label>
                        <input type="password" name="newPassword" class="info-input" placeholder="Enter new password">
                        <small class="error" id="newPasswordError"></small>
            
                        <label class="info-label">Confirm New Password</label>
                        <input type="password" name="confirmPassword" class="info-input" placeholder="Confirm new password">
                        <small class="error" id="confirmPasswordError"></small>
            
                    </div>
            
                    <div class="form-actions">
                        <a href="/userProfile" type="button" id="cancelBtn" class="btn-cancel">Cancel</a>
                        <button type="submit" class="edit-profile-btn">Update Password</button>
                    </div>
            
                </form>
            </main>
            
              
        </div>
    </div>

    <%-include("../../views/partials/user/footer")%>

    <script>
        document.getElementById('changePasswordForm').addEventListener('submit',async(e)=>{
            e.preventDefault();

            const oldPassword=e.target.oldPassword.value.trim();
            const newPassword=e.target.newPassword.value.trim();
            const confirmPassword=e.target.confirmPassword.value.trim();

            if(!oldPassword || !newPassword || !confirmPassword){
                alert("All fields are required");
                return;
            }

            if(newPassword !== confirmPassword){
                alert("New passwords do not match");
                return;
            }

            const res=await fetch('/change-password',{
                method:"POST",
                headers:{"Content-Type":"application/json"},
                body:JSON.stringify({oldPassword,newPassword})
            });

            const data=await res.json();
            alert(data.message);
            window.location.href="/userProfile"
        })
        
    </script>
</body>
</html>
