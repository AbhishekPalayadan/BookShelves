<%-include("../../views/partials/user/header")%>

<section class="hero">
    <img src="/images/book-banner3.png" class="hero-banner" alt="Banner Image">

    <div class="hero-text">
        <h1>Book<br>Bound</h1>
        <p>Where Every Story<br>Finds a Reader</p>
    </div>
</section>



<section class="top-picks">
<div class="section-title">
    <div class="line"></div>
    <h2>Top Picks</h2>
    <span class="section-title-2">Editor's Choice</span>
    <a href="/products" class="see-all">View all</a>
</div>

    <div class="books-grid">
        <% if (topPicks && topPicks.length > 0) { %>
            <% topPicks.forEach(product => { %>

<a href="/product-details/<%= product._id %>" class="product-card" style="text-decoration: none; color: inherit;">
    <div class="product-image">
        <img src="/uploads/product-images/<%= product.images[0] %>" alt="">
    </div>

    <div class="product-info">
        <p class="product-name"><%= product.product_name %></p>

        <p class="product-price">
            <span class="price-sale">₹<%= product.sale_price %></span>
            <% if (product.sale_price < product.regular_price) { %>
                <span class="price-original">₹<%= product.regular_price %></span>
            <% } %>
        </p>

        <div class="product-rating">⭐⭐⭐⭐⭐</div>
    </div>
</a>
            <% }) %>
        <% } else { %>
            <p>No top picks available</p>
        <% } %>
    </div>
</section>






<section class="categories">
    <div class="section-title">
        <div class="line"></div>
        <h2>Categories</h2>
    </div>

    <ul class="category-list">
        <% if (categories && categories.length > 0) { %>
            <% categories.forEach(cat => { %>
                <li class="category-item">
                    <a href="/products?category=<%= cat._id %>">
                        <%= cat.name %>
                    </a>
                </li>
                
            <% }) %>
        <% } else { %>
            <li>No categories available</li>
        <% } %>
    </ul>
</section>




<section class="new-arrivals">
    <div class="section-title">
        <div class="line"></div>
        <h2>Featured</h2>
        <span class="section-title-2">New Arrivals</span>
        <a href="/products" class="see-all">View all</a>
    </div>


    <div class="books-grid">
    <% if (products && products.length > 0) { %>
        <% products.forEach(product => { %>
<a href="/product-details/<%= product._id %>" class="product-card" style="text-decoration: none; color: inherit;">
    <div class="product-image">
        <img src="/uploads/product-images/<%= product.images[0] %>" alt="">
    </div>

    <div class="product-info">
        <p class="product-name"><%= product.product_name %></p>

        <p class="product-price">
            <span class="price-sale">₹<%= product.sale_price %></span>
            <% if (product.sale_price < product.regular_price) { %>
                <span class="price-original">₹<%= product.regular_price %></span>
            <% } %>
        </p>

        <div class="product-rating">⭐⭐⭐⭐⭐</div>
    </div>
</a>
        <% }) %>
    <% } else { %>
        <p>No products found</p>
    <% } %>
</div>




</section>

