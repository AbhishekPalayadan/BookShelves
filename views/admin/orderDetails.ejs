<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Order Details</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }

    body {
      font-family: 'Segoe UI', sans-serif;
      background: #f5f5f5;
      color: #333;
    }

    .container {
      max-width: 1200px;
      margin: 30px auto;
      background: #fff;
      padding: 25px;
      border-radius: 8px;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 2px solid #eee;
      padding-bottom: 15px;
      margin-bottom: 25px;
    }

    .header h1 {
      font-size: 26px;
      font-weight: 600;
    }

    .back-btn {
      padding: 8px 14px;
      border: 1px solid #ddd;
      background: #f5f5f5;
      cursor: pointer;
      border-radius: 4px;
      font-size: 14px;
    }

    .back-btn:hover {
      background: #e0e0e0;
    }

    .section {
      margin-bottom: 30px;
    }

    .section-title {
      font-size: 18px;
      font-weight: 600;
      margin-bottom: 15px;
      border-bottom: 1px solid #ddd;
      padding-bottom: 8px;
    }

    .info-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 15px;
    }

    .info-box {
      background: #f9f9f9;
      padding: 15px;
      border-radius: 4px;
    }

    .label {
      font-size: 12px;
      color: #777;
      margin-bottom: 6px;
      text-transform: uppercase;
    }

    .value {
      font-size: 15px;
      font-weight: 500;
    }

    .status-badge {
      display: inline-block;
      padding: 6px 12px;
      border-radius: 4px;
      font-size: 13px;
      font-weight: 600;
      text-transform: uppercase;
    }

    .pending { background: #fff3cd; color: #856404; }
    .shipped { background: #cfe2ff; color: #084298; }
    .delivered { background: #d4edda; color: #155724; }
    .cancelled { background: #f8d7da; color: #721c24; }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
    }

    th, td {
      padding: 14px;
      border-bottom: 1px solid #ddd;
      font-size: 14px;
      text-align: left;
    }

    th {
      background: #f0f0f0;
      text-transform: uppercase;
      font-size: 13px;
    }

    .item-status {
      padding: 5px 10px;
      border-radius: 4px;
      font-size: 12px;
      font-weight: 600;
      display: inline-block;
    }

    .item-pending { background: #fff3cd; color: #856404; }
    .item-cancelled { background: #f8d7da; color: #721c24; }
    .item-returned { background: #e0e0e0; color: #555; }
    .item-delivered { background: #d4edda; color: #155724; }

    .summary {
      max-width: 400px;
      margin-left: auto;
      background: #f9f9f9;
      padding: 20px;
      border-radius: 4px;
    }

    .summary-row {
      display: flex;
      justify-content: space-between;
      margin-bottom: 10px;
      font-size: 14px;
    }

    .summary-total {
      border-top: 2px solid #ddd;
      padding-top: 10px;
      font-weight: 600;
      font-size: 16px;
    }
  </style>
</head>

<body>

<div class="container">

  <!-- HEADER -->
  <div class="header">
    <div>
      <h1>Order Details</h1>
      <small>Order ID: <strong><%= order.orderId %></strong></small>
    </div>
    <button class="back-btn" onclick="history.back()">← Back</button>
  </div>

  <!-- ORDER INFO -->
  <div class="section">
    <div class="section-title">Order Information</div>
    <div class="info-grid">

      <div class="info-box">
        <div class="label">Order Date</div>
        <div class="value">
          <%= new Date(order.createdAt).toLocaleDateString("en-IN") %>
        </div>
      </div>

      <div class="info-box">
        <div class="label">Payment Method</div>
        <div class="value"><%= order.paymentMethod %></div>
      </div>

      <div class="info-box">
        <div class="label">Order Status</div>
        <div class="value">
          <span class="status-badge <%= order.status %>">
            <%= order.status %>
          </span>
        </div>
      </div>

    </div>
  </div>

  <!-- CUSTOMER & ADDRESS -->
  <div class="section">
    <div class="section-title">Customer & Shipping</div>
    <div class="info-grid">

      <div class="info-box">
        <div class="label">Customer</div>
        <div class="value"><%= order.userId.fullname %></div>
        <div><%= order.userId.email %></div>
        <div><%= order.userId.phone %></div>
      </div>

      <div class="info-box">
        <div class="label">Shipping Address</div>
        <div><%= order.address.house %></div>
        <div><%= order.address.place %>, <%= order.address.state %></div>
        <div>Pincode: <%= order.address.pincode %></div>
        <div>Phone: <%= order.address.phone %></div>
      </div>

    </div>
  </div>

  <!-- ORDER ITEMS -->
  <div class="section">
    <div class="section-title">Order Items</div>

    <table>
      <thead>
        <tr>
          <th>Product</th>
          <th>Qty</th>
          <th>Price</th>
          <th>Subtotal</th>
          <th>Status</th>
        </tr>
      </thead>

      <tbody>
        <% order.items.forEach(item => { %>
          <tr>
            <td><%= item.productId.product_name %></td>
            <td><%= item.quantity %></td>
            <td>₹<%= item.price %></td>
            <td>₹<%= item.price * item.quantity %></td>
            <td>
              <% if(item.status === "cancelled"){ %>
                <span class="item-status item-cancelled">Cancelled</span>
              <% } else if(item.status === "returned"){ %>
                <span class="item-status item-returned">Returned</span>
              <% } else if(order.status === "delivered"){ %>
                <span class="item-status item-delivered">Delivered</span>
              <% } else { %>
                <span class="item-status item-pending">Pending</span>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- SUMMARY -->
  <div class="summary">
    <div class="summary-row">
      <span>Subtotal</span>
      <span>₹<%= order.totalAmount %></span>
    </div>
    <div class="summary-row summary-total">
      <span>Total</span>
      <span>₹<%= order.totalAmount %></span>
    </div>
  </div>

</div>

</body>
</html>
